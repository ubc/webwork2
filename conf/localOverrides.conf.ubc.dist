# Note that the mapped Webwork course name still goes through sanitization.
# Please make sure they match these requirements or the courses will not match.
# - Allowed characters in regex form: [a-zA-Z0-9_-]
# - Max length 40 characters
# See WebworkBridge's Parser::sanitizeCourseName() for implementation
$bridge{custom_course_title_parser} = sub {
	my $r = shift;

	# check if blackboard (legacy support)
	my $blackboardTitle = $bridge{blackboard_course_title_parser}($r);
	if ($blackboardTitle) {
		return $blackboardTitle;
	}

	# else use term name (if available) and context_label
	my $course_title = $r->param("context_label");
	if (defined($r->param("custom_term_name")) && $r->param("custom_term_name") ne "" &&
			$r->param("custom_term_name") ne "Canvas.term.name" && $r->param("custom_term_name") ne "Default Term") {
		# do term then context title in order to reduce change of collision if context title is very long
		$course_title = $r->param("custom_term_name") . "_" . $r->param("context_label");
	}

	return $course_title;
};

$bridge{blackboard_course_title_parser} = sub {
	my $r = shift;

	$value = $r->param("context_label");
	if ($value =~ m/WS.UBC.MATH.104.101.2012W1.12422/) {
		$value =~ s/WS.UBC.MATH.104.101.2012W1.12422/MATH104_2012W1/;
		return $value;
	} elsif ($value =~ m/(SIS|WS)\.[^.]*\.([^.]*)\.([^.]*)\.([^.]*)\.([^.]*)\..*/) {
		$value =~ s/(SIS|WS)\.[^.]*\.([^.]*)\.([^.]*)\.([^.]*)\.([^.]*)\..*/$2_$3_$4_$5/;
		return $value;
	} elsif ($value =~ m/CL\.[^.]*\.(.*)/) {
		$value =~ s/CL\.[^.]*\.(.*)/$1/;
		return $value;
	} elsif ($value =~ m/WS\.[^.]*\.(.*)/) {
		$value =~ s/WS\.[^.]*\.(.*)/$1/;
		return $value;
	}

	return 0;
};

